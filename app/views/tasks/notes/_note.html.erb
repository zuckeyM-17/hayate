<%= turbo_frame_tag "task_#{task.id}_note_#{note.id}" do %>
<div class="mt-2">
    <p class="text-gray-600 text-xs">
        <%= note.created_at.today? ? note.created_at.strftime('%H:%M') : note.created_at.strftime('%Y-%m-%d %H:%M') %>
    </p>
    <div class="text-base">
    <%= markdown(note.body).html_safe %>
    </div>

    <%= link_to 'delete', note_path(note), data: { "turbo-method": :delete }, class: 'ml-4 underline text-red-500' %>
</div>
<% end %><!-- turbo_frame_tag -->
