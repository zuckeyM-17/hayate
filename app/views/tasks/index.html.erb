<% content_for(:page_title) { 'Tasks' } %>

<%= render 'shared/breadcrumb' %>
<div class="p-4">
  <%= render 'shared/header', title: 'Tasks' %>

  <div class="pt-4 w-full flex flex-col items-center">
    <div class="p-4 w-full border rounded-md lg:w-8/12">
      <%= form_for @task do |f| %>    
      <div class="flex items-center flex-wrap">
        <div class="w-full mb-2"><%= f.text_field :title, autofocus: true, class: 'border-x-0 border-t-0 border-b w-full' %></div>
        <div class="w-full lg:w-3/12">
            <%= f.select :category, Task.categories.keys, {}, class: 'border-x-0 border-t-0 border-b' %>
        </div>
        <div class="w-full lg:w-6/12">
            <%= f.date_field :start_date, class: 'border-x-0 border-t-0 border-b' %> ~ <%= f.date_field :end_date, class: 'border-x-0 border-t-0 border-b' %>
        </div>
        <div class="flex items-center justify-end w-full mt-2 lg:mt-0 lg:w-3/12">
          <%= f.submit 'Add', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      </div>
      <% end %> <!-- form_for -->
    </div>
    
    <div class="pt-4 w-full lg:w-8/12 divide-y">
      <%= turbo_frame_tag 'tasks-list' do %>
      <%= render @tasks %>
      <% end %> <!-- turbo_flame_tag -->
    </div>

  </div>
</div>