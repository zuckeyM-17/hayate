<main class="container">
  <div class="header">
    <h1>
      <%= "#{@reading.chapter.book.title} ##{@reading.chapter.number} #{@reading.chapter.title}" %>
    </h1>
    <div>
      <p>
        <%= form_with url: chapter_notes_path do |f| %>
          <%= f.hidden_field :chapter_id, value: @reading.chapter.id %>
          <%= f.text_area :body, value: '' %>
          <%= f.submit 'add note' %>
        <% end %>
      </p>
      <% @reading.chapter.notes.order(created_at: :desc).each do |n| %>
        <p><%= n.body %></p>
      <% end %>
    </div>

    <div>
      <% if @reading.chapter.book.chapters.count > @reading.chapter.number %>
        <%= form_with url: next_book_path(@reading.chapter.book) do |f| %>
          <%= f.submit 'next' %>
        <% end %>
      <% else %>
        <%= form_with url: finish_book_path(@reading.chapter.book) do |f| %>
          <%= f.submit 'finish' %>
        <% end %>
      <% end%>
    </div>
  </div>
</main>