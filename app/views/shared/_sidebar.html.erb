<% 

def sidebar_link_to(path, icon, text)
	active = 'dark:bg-gray-800 dark:text-gray-50' if current_page?(path)
	tag.li class: "w-10 sm:w-full overflow-hidden h-10 flex items-center #{active}" do
		link_to(path, class: 'flex items-center p-2 space-x-3 rounded-md') do
		concat tag.span icon
		concat tag.span " #{text}", class: 'invisible lg:visible'
		end
	end
end

%>

<div class="dark:bg-gray-900 dark:text-gray-100 flex pl-2 sm:space-y-2 sm:pt-3 sm:pl-3 sm:flex-col sm:h-full sm:w-16 lg:w-60">
	<div class="flex space-x-4 sm:p-2 items-center">
	    <h2 class="text-lg font-semibold"><span>H</span><span class="hidden lg:inline-block">ayate</span></h2>
	</div>
	<div class="divide-y dark:divide-gray-700">
		<ul class="flex space-y-1 text-sm sm:flex-col px-2">
			<%= sidebar_link_to root_path, "🖥️", "Dashboard" %>
			<%= sidebar_link_to tasks_path, "✅", "Tasks"%>
			<%= sidebar_link_to words_path, "🔤", "Words" %>
			<%= sidebar_link_to books_path, "📚", "Books" %>
			<%= sidebar_link_to daily_task_sets_path, "💪", "Daily Task" %>
			<%= sidebar_link_to entries_path, "🌐", "RSS" %>
			<%= sidebar_link_to links_path, "🔗", "Links" %>
			<%= sidebar_link_to review_tool_path, "📝", "Review Tool" %>
		</ul>
	</div>
</div>