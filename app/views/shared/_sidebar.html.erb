<% 

def sidebar_link_to(path, icon, text)
	active = 'dark:bg-gray-800 dark:text-gray-50' if current_page?(path)
	tag.li class: "px-2 w-10 sm:w-full overflow-hidden h-12 flex items-center #{active} sm:w-full sm:px-0" do
		link_to(path, class: 'flex items-center sm:px-5 space-x-3 rounded-md') do
		concat tag.span icon
		concat tag.span " #{text}", class: 'hidden lg:inline-block'
		end
	end
end

%>

<div class="dark:bg-gray-900 dark:text-gray-100 flex pl-2 sticky top-0 sm:pt-3 sm:px-0 sm:flex-col sm:h-full sm:w-16 lg:w-60">
	<div class="flex space-x-4 sm:py-2 sm:px-5 items-center">
	    <h2 class="text-lg font-semibold"><span>H</span><span class="hidden lg:inline-block">ayate</span></h2>
	</div>

	<div class="divide-y dark:divide-gray-700">
		<ul class="flex text-sm sm:space-y-1 sm:flex-col px-2 sm:px-0">
			<%= sidebar_link_to root_path, "🖥️", "Dashboard" %>
			<%= sidebar_link_to logs_path, "📅", "Logs" %>
			<%= sidebar_link_to tasks_path, "✅", "Tasks"%>
			<%= sidebar_link_to words_path, "🔤", "Words" %>
			<%= sidebar_link_to books_path, "📚", "Books" %>
			<%= sidebar_link_to daily_task_sets_path, "💪", "Daily Task" %>
			<%= sidebar_link_to entries_path, "🌐", "RSS" %>
			<%= sidebar_link_to links_path, "🔗", "Links" %>
			<%= sidebar_link_to review_tool_path, "📝", "Review Tool" %>
		</ul>
	</div>

	<div class="flex items-center sm:p-2 sm:mt-auto">
		<%= link_to 'Sign Out', signout_path, data: { "turbo-method": :delete } %>
	</div>
</div>