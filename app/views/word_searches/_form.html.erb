<%= form_for word_search do |f| %>
  <% if word_search.errors.any? %>
    <div>
      <%= word_search.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <div class="pt-4"><%= f.search_field :word %></div>
  <div class="pt-4"><%= f.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %></div>
<% end %>