<main class="container">
  <%= render 'shared/breadcrumb' %>
  <div class="p-4">
    <%= render 'shared/header', title: 'Books' %>

    <div>
      <%= link_to "New",
              new_book_path,
              class: "btn btn--primary" %>
      <%= paginate @books %>
      <table class="border border-slate-500 table-auto">
        <thead>
          <tr>
            <th class="border border-slate-600 px-2 py-1">Title</th>
            <th class="border border-slate-600 px-2 py-1">Category</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |b| %>
            <tr>
              <td class="border border-slate-600 px-2 py-1"><%= link_to b.title, book_path(b.id) %></td>
              <td class="border border-slate-600 px-2 py-1"><%= b.category %></td>
            </tr>
          <% end%>
        </tbody>
      </table>
    </div>
  </div>
</main>