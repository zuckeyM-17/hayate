<main class="container">
  <div class="header">
    <h1>Books</h1>
    <%= link_to "New",
                new_book_path,
                class: "btn btn--primary" %>
  </div>

  <div>
    <table>
      <tr>
        <th>Title</th>
        <th>Category</th>
      </tr>
      <% @books.each do |b| %>
        <tr>
          <td><%= link_to b.title, book_path(b.id) %></td>
          <td><%= b.category %></td>
        </tr>
      <% end%>
    </table>
  </div>
</main>